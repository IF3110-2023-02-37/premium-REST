// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String    @id
  email         String    @unique
  displayName   String    
  picture       String
  description   String
  role          String    @default("user") 
  podcast       Podcast[]
  review        Review[]
}

model Podcast {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [podcaster], references: [username])
  podcaster     String    
  title         String
  audio         String
  picture       String
  date          DateTime  @default(now())
  review        Review[]
}

model Review {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [podcaster], references: [username])
  podcast       Podcast   @relation(fields: [idPodcast], references: [id])
  podcaster     String    
  idPodcast     Int
  reviewer      String
  review        String
  date          DateTime  @default(now())
  rating        Int
}